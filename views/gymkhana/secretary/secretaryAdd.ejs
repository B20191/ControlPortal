<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>

    <!-- Jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js">
    </script>

    <!-- CSS -->
    <link href='https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css'
        rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <section class="vh-80 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Create Secretary</h3>
                            <form action="/gymkhana/secretary/add" method="post" enctype="multipart/form-data">

                                <div class="row">

                                    <div class="form-outline">
                                        <label class="form-label" for="post">Secretary Post</label>
                                        <select name="post" class="form-control form-control-lg" id="post" required>
                                            <option>Technical</option>
                                            <option>Hostel</option>
                                            <option>Sports</option>
                                            <option>Academic</option>
                                            <option>General</option>
                                            <option>Research</option>
                                            <option>Literary</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="form-outline">
                                        <label class="form-label" for="datepicker">Year</label>
                                        <input type="text" id="datepicker"
                                            class="datepicker form-control form-control-lg" name="year" required />
                                        <span class="input-group-addon"><i
                                                class="glyphicon glyphicon-calendar"></i></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-outline">
                                        <label class="form-label" for="name">Name *</label>
                                        <input name="name" type="text" class="form-control form-control-lg" id="name"
                                            placeholder="Name" required>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="form-outline">
                                        <label class="form-label" for="facebook">Facebook</label>
                                        <input name="facebook" type="text" class="form-control form-control-lg"
                                            id="facebook" placeholder="Facebook link">
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="form-outline">
                                        <label class="form-label" for="email">Email address *</label>
                                        <input name="email" type="email" class="form-control form-control-lg" id="email"
                                            placeholder="name@example.com" required>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="form-outline">
                                        <label class="form-label" for="image">Upload Image</label>
                                        <input name="img" type="file" accept="image/png, image/jpeg"
                                            class="form-control-file form-control-file-lg" id="image">
                                    </div>

                                </div>

                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Create" />
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        $(function () {
            $('#datepicker').datepicker({
                changeYear: true,
                showButtonPanel: true,
                dateFormat: 'yy',
                onClose: function (dateText, inst) {
                    var year = $("#ui-datepicker-div .ui-datepicker-year :selected").val();
                    $(this).datepicker('setDate', new Date(year, 1));
                }
            });

            $("#datepicker").focus(function () {
                $(".ui-datepicker-month").hide();
                $(".ui-datepicker-calendar").hide();
            });

        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>